{{#extends "base"}}

{{#block "content"}}
<h1>Update a Customer</h1>

<form method="POST">
    <div class="mt-3">
        <label>First Name</label>
        <input type="text" name="first_name" class="form-control" value="{{customer.first_name}}" />
    </div>

    <div class="mt-3">
        <label>Last Name</label>
        <input type="text" name="last_name" class="form-control" value="{{customer.last_name}}" />
    </div>

    <div class="mt-3">
        <label>Rating</label>
        <input type="number" name="rating" class="form-control" value="{{customer.rating}}" />
    </div>

    <div class="mt-3">
        <label>Company</label>
        <select name="company_id" class="form-control" value="{{eqs}}">
            {{#each companies}}
            <option value="{{this.company_id}}" {{#eq this.company_id ../customer.company_id}}selected{{/eq}}>
                {{this.name}}
            </option>
            {{/each}}
        </select>
    </div>

    <div class="mt-3">
        <label>Employees</label>
        <select name="employees" class="form-control" multiple>
            {{#each employees}}
            <option value="{{this.employee_id}}" {{#inArray ../employeeIds this.employee_id}}selected{{/inArray}}>
                {{this.first_name}} {{this.last_name}}
            </option>
            {{/each}}
        </select>
    </div>

    <input type="submit" value="Update" class="mt-3 btn btn-primary" />
</form>

{{/block}}

{{/extends}}